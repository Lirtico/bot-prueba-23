# Discord Bot Configuration
DISCORD_TOKEN=your_bot_token_here
DISCORD_APPLICATION_ID=your_application_id_here
DISCORD_COMMAND_PREFIX=!

# Environment Settings
ENVIRONMENT=development
DEBUG=true

# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///./discord_bot.db

# Redis Configuration (optional, for caching)
REDIS_URL=redis://localhost:6379

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/bot.log

# Feature Flags
ENABLE_JAIL_SYSTEM=true
ENABLE_LOGGING=true
ENABLE_THREAT_DETECTION=true

# Jail System Configuration
JAIL_ROLE_NAME=Jailed
JAIL_CHANNEL_NAME=jail-log
JAIL_DURATION_MINUTES=60

# Moderation Settings
MAX_WARNINGS_BEFORE_JAIL=3
AUTO_DELETE_MALICIOUS_MESSAGES=true
AUTO_DELETE_SPAM_MESSAGES=true

# Bot Settings
COMMAND_TIMEOUT=30
MAX_CONCURRENT_COMMANDS=5
